        pronosticoCosechaDTOForm.codigoPronosticoCosecha = 0;
        await modalPronosticoCosecha.NewModal();
    }

    private async Task sendData()
    {
        await loader.Show();
        string mensajeTransaccion = string.Empty;
        string iconoMostrar = string.Empty;

